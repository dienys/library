<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<div class="row">
 <div class="col-md-9 col-md-offset-1">
  <table class="table table-inverse">
   <thead class="thead-inverse">
    <tr>
     <th>#</th>
     <th>Title</th>
     <th>ISBN</th>
     <th>Description</th>
     <th>Author</th>
     <th>Status</th>
     <th colspan="3"></th>
    </tr>
   </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <tr>
        <% @loans.each do |loan| %>
  
         <%end%>
         
         <% if current_user.isAdmin == true && book.status != "available" %>
            <th scope="row"><%= book.id %></th>
            <td><%= book.title %></td>
            <td><%= book.ISBN %></td>
            <td><%= book.description %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= link_to 'Show', book %></td>
            <td></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <%end %>
        <% if book.status == "available" %>
            <th scope="row"><%= book.id %></th>
            <td><%= book.title %></td>
            <td><%= book.ISBN %></td>
            <td><%= book.description %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= link_to 'Show', book %></td>
          <% if current_user.isAdmin == true %>
              <td><%= link_to "Loan", new_loan_path() %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <%end %>
       <%end %>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>
</div>
<br>
 <%= form_tag(books_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Books" %>
    <%= submit_tag "Search", :title => nil %>
<% end %>

<% if @books.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>

<% if current_user.isAdmin == true %>
 <%= button_to 'New Book', new_book_path, :method => "get" %>
<% end %>