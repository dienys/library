<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
 <thead>
   <tr>
     <th>Title</th>
     <th>Isbn</th>
     <th>Description</th>
     <th>Author</th>
     <th>Status</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.ISBN %></td>
       <td><%= book.description %></td>
       <td><%= book.author %></td>
       <td><%= book.status %></td>
       <td><%= link_to 'Show', book %></td>
       
       <% if current_user.isAdmin == true %>
         <td><%= link_to "Loan", new_loan_path(book)  %></td>
         <td><%= link_to 'Edit', edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

