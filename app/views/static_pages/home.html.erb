<div class="jumbotron">
    <div class="container">
        <h1>Welcome to the DM-Library !</h1>
    </div>
</div>

<% if current_user %>
    <div class="row">
        <div class="home_books">
            <h2>Discover our our many choices of books !</h2>
            <%= button_to "Books", books_path, :method => "get" %>
        </div>
    </div>
<% else %>
    <div class="row">
        <p>Oups ! It seems you are not logged in</p>
        <div class="button_to_home">
        <%= button_to "Log in", log_in_path, :method => "get" %>
        </div>
        <div>
        <strong>or</strong>
        </div>
        <div class="button_to_home">
        <%= button_to "Sign up", sign_up_path, :method => "get" %>
        </div>
    </div>
<% end %>
<hr>
<div class="row">
    <h2 class="random">Random Book</h2>
    <table class="table table-bordered table-random" align="center">
        <thead class="thead-inverse">
            <tr>
                <th>Illustration</th>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <img src="<%= @book.image_url %>", height="100", width="60"></img>
                </th>
                <th>
                    <%= @book.title %>
                </th>
                <th>
                    <%= @book.author %>
                </th>
            </tr>
        </tbody>
    </table>
    <% if current_user %>
        <%= button_to "Visit book", @book, :method => "get" %>
    <% end %>
</div>
